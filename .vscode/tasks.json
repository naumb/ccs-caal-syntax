    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build JSON Grammar",
            "type": "shell",
            "command": "npx js-yaml syntaxes/caal-ccs.tmLanguage.yaml > syntaxes/caal-ccs.tmLanguage.json"
        },
        {
            "label": "Build and Install Extension",
            "type":"shell",
            "command": "vsce pack && code --install-extension ccs-caal-syntax-0.0.1.vsix ",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}